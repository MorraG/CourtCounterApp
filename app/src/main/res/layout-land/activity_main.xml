<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9ad00">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="45dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="Team A"
                android:textColor="#7b0000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily=" sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:onClick="addTenForTeamA"
                android:text="Quaffle goal"
                android:textSize="12sp"
                android:textColor="#d9ad00"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textSize="12sp"
                android:onClick="addThirtyForTeamA"
                android:text="Golden Snitch"
                android:textColor="#d9ad00"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:onClick="addOneBlueForTeamA"
                android:textSize="12sp"
                android:text="Blue Card"
                android:textColor="#d9ad00"
                android:textStyle="bold" />

            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:onClick="addOneYellowForTeamA"
                android:text="Yellow Card"
                android:textSize="12sp"
                android:textColor="#d9ad00"
                android:textStyle="bold" />

            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:onClick="addOneRedForTeamA"
                android:text="Red Card"
                android:textSize="12sp"
                android:textColor="#d9ad00"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:layout_width="78dp"
            android:layout_height="310dp"
            android:src="@drawable/prova1"
            android:padding="10dp">

        </ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="45sp"
            tools:context="com.example.android.courtcounter.MainActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="Team B"
                android:textColor="#7b0000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily=" sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:onClick="addTenForTeamB"
                android:text="Quaffle goal"
                android:textColor="#d9ad00"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:onClick="addThirtyForTeamB"
                android:text="Golden Snitch"
                android:textColor="#d9ad00"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:onClick="addOneBlueForTeamB"
                android:text="Blue Card"
                android:textColor="#d9ad00"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:onClick="addOneYellowForTeamB"
                android:text="Yellow Card"
                android:textColor="#d9ad00"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="8dp"
                android:onClick="addOneRedForTeamB"
                android:text="Red Card"
                android:textColor="#d9ad00"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/bluecard_team_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/yellowcard_team_a"
        android:paddingLeft="6dp"
        android:text="0"
        android:textColor="#2f52a6"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/yellowcard_team_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bluecard_team_a"
        android:layout_alignBottom="@+id/bluecard_team_a"
        android:layout_toLeftOf="@+id/redcard_team_a"
        android:layout_toStartOf="@+id/redcard_team_a"
        android:paddingLeft="6dp"
        android:text="0"
        android:textColor="#fdffe67f"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/redcard_team_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/reset"
        android:paddingLeft="6dp"
        android:text="0"
        android:textColor="#fdb10c00"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="resetScore"
        android:text="reset"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bluecard_team_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/reset"
        android:paddingLeft="6dp"
        android:text="0"
        android:textColor="#2f52a6"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/yellowcard_team_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/bluecard_team_b"
        android:paddingLeft="6dp"
        android:text="0"
        android:textColor="#fdffe67f"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/redcard_team_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/yellowcard_team_b"
        android:paddingLeft="6dp"
        android:text="0"
        android:textColor="#fdb10c00"
        android:textSize="40sp"
        android:textStyle="bold" />
</RelativeLayout>